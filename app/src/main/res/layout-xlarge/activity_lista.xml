<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lista"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.josip.acer.pulaplusaplikacija.ListaActivity"
    android:animationCache="true">

    <Button

        android:onClick="Booking"
        android:layout_width="200px"
        android:layout_height="200px"
        android:id="@+id/b3"
        android:background="@mipmap/hotel1"
        android:layout_alignTop="@+id/b1"
        android:layout_alignStart="@+id/b4"
        tools:ignore="PxUsage" />

    <Button
        android:layout_width="200px"
        android:layout_height="200px"
        android:id="@+id/b6"

        android:background="@mipmap/hospital1"


        android:layout_alignBottom="@+id/b5"
        android:layout_alignStart="@+id/b4"
        tools:ignore="PxUsage" />

    <Button
        android:layout_width="200px"
        android:layout_height="200px"
        android:id="@+id/b4"
        android:background="@mipmap/restoran1"
        android:layout_marginEnd="34dp"

        android:layout_alignTop="@+id/b2"
        android:layout_alignParentEnd="true"
        tools:ignore="PxUsage" />

    <TextView
        android:text="  Accommodation   "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_alignTop="@+id/Trgovine"
        tools:ignore="HardcodedText"
        android:layout_alignEnd="@+id/b3"
        android:layout_alignStart="@+id/b3"
        android:layout_weight="0.53"
        android:textAlignment="center" />

    <Button
        android:id="@+id/b2"
        android:layout_width="200px"
        android:layout_height="200px"
        android:onClick="Dogadaj"
        android:background="@mipmap/dog1"
        tools:ignore="PxUsage"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/b5"
        android:layout_alignStart="@+id/b1" />

    <TextView
        android:text="Bus stations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:id="@+id/textView8"
        android:textAlignment="center"
        android:layout_below="@+id/b4"
        android:layout_alignStart="@+id/bus"
        android:layout_alignEnd="@+id/bus" />

    <Button
        android:layout_width="200px"
        android:layout_height="200px"
        android:id="@+id/b1"
        android:background="@mipmap/shop1"
        tools:ignore="PxUsage"
        android:layout_marginTop="14dp"
        android:layout_marginStart="43dp"
        android:layout_below="@+id/Trgovine"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="200px"
        android:layout_height="200px"
        android:id="@+id/bus"
        android:background="@drawable/bus"
        tools:ignore="PxUsage"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView8"
        android:layout_alignStart="@+id/b4" />

    <Button

        android:id="@+id/b5"
        android:layout_width="200px"
        android:layout_height="200px"

        android:background="@mipmap/museum1"
        tools:ignore="PxUsage"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/b1"
        android:layout_alignStart="@+id/b1" />

    <TextView
        android:text="Events"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_weight="1"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/b2"
        android:layout_alignEnd="@+id/b5" />

    <TextView
        android:text="Shops"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Trgovine"
        tools:ignore="HardcodedText"
        android:layout_weight="0.61"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/b1"
        android:layout_alignStart="@+id/b1" />

    <TextView
        android:text="Hospital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/b6"
        android:layout_alignEnd="@+id/b6"
        android:layout_marginBottom="10dp"
        android:id="@+id/textView7"
        android:layout_alignStart="@+id/b6"
        android:textAlignment="center" />

    <TextView
        android:text="Sights"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        tools:ignore="HardcodedText"
        android:layout_weight="0.10"
        android:textAlignment="center"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignStart="@+id/b5" />

    <TextView
        android:text="Restaurants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView"
        android:layout_alignEnd="@+id/b4"
        android:id="@+id/textView4"
        android:layout_alignStart="@+id/b6"
        android:textAlignment="center" />

</RelativeLayout>
