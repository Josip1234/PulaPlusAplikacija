<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lista"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.josip.acer.pulaplusaplikacija.ListaActivity"
    android:animationCache="true"
    tools:ignore="ExtraText">

    <TextView
        android:text="  Accommodation  "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_alignTop="@+id/Trgovine"
        tools:ignore="HardcodedText,ObsoleteLayoutParam,UnknownIdInLayout"
        android:layout_alignEnd="@+id/b3"
        android:layout_alignStart="@+id/b3"
        android:layout_weight="0.53"
        android:textAlignment="center" />

    <TextView
        android:text="Shops"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Trgovine"
        tools:ignore="HardcodedText,ObsoleteLayoutParam"
        android:layout_weight="0.61"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/b1"
        android:layout_alignEnd="@+id/b1" />

    <TextView
        android:text="Hospital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textAlignment="center"
        android:layout_above="@+id/b6"
        android:layout_alignStart="@+id/b6"
        android:layout_alignEnd="@+id/b6"
        tools:ignore="HardcodedText" />

    <TextView
        android:text="Sights"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        tools:ignore="HardcodedText,ObsoleteLayoutParam"
        android:layout_weight="0.10"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/b1"
        android:layout_alignStart="@+id/b5"
        android:layout_alignEnd="@+id/b5" />

    <Button
        android:layout_width="100px"
        android:layout_height="100px"
        android:id="@+id/b6"

        android:background="@mipmap/hospital1"


        tools:ignore="PxUsage"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textAlignment="center"
        android:text="Restaurants"
        android:layout_below="@+id/b5"
        android:layout_marginTop="17dp"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/b4"
        tools:ignore="HardcodedText" />

    <TextView
        android:text="Events"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_weight="1"
        android:textAlignment="center"
        android:layout_above="@+id/b4"
        android:layout_alignStart="@+id/b5"
        android:layout_alignEnd="@+id/b5"
        tools:ignore="HardcodedText,ObsoleteLayoutParam" />

    <TextView
        android:text="Bus stations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/b4"
        android:layout_centerHorizontal="true"
        tools:ignore="HardcodedText" />

    <Button
        android:layout_width="100px"
        android:id="@+id/b1"
        android:background="@mipmap/shop1"
        tools:ignore="PxUsage"
        android:layout_height="100px"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/bus"
        android:background="@drawable/bus2"
        tools:ignore="PxUsage"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />
<Button
        android:onClick="Booking"
        android:id="@+id/b3"
        android:background="@mipmap/hotel1"
        tools:ignore="PxUsage"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/b2"
        android:onClick="Dogadaj"
        android:background="@mipmap/dog1"
        tools:ignore="PxUsage"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_below="@+id/b5"
        android:layout_alignParentStart="true" />

    <Button

        android:id="@+id/b5"

        android:background="@mipmap/museum1"
        tools:ignore="PxUsage"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_below="@+id/b1"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="100px"
        android:layout_height="100px"
        android:id="@+id/b4"
        android:background="@mipmap/restoran1"

        tools:ignore="PxUsage"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/bus"
        android:background="@drawable/bus"
        tools:ignore="DuplicateIds,PxUsage"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/b4" />

</RelativeLayout>
