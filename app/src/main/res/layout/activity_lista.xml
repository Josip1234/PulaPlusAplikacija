<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lista"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.josip.acer.pulaplusaplikacija.ListaActivity"
    android:animationCache="true">

    <Button

        android:onClick="Booking"
        android:layout_width="200px"
        android:layout_height="200px"
        android:id="@+id/b3"
        android:background="@mipmap/hotel1"
        android:layout_alignTop="@+id/b1"
        android:layout_alignStart="@+id/b4" />

    <Button
        android:id="@+id/b2"
        android:layout_width="200px"
        android:layout_height="200px"
        android:onClick="Dogadaj"
        android:background="@mipmap/dog1"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/b1" />

    <Button
        android:layout_width="200px"
        android:layout_height="200px"
        android:id="@+id/b4"
        android:background="@mipmap/restoran1"
        android:layout_marginEnd="23dp"
        android:layout_below="@+id/b1"
        android:layout_alignParentEnd="true" />

    <Button

        android:id="@+id/b5"
        android:layout_width="200px"
        android:layout_height="200px"

        android:background="@mipmap/museum1"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/b2"
        android:layout_alignStart="@+id/b2" />

    <Button
        android:layout_width="200px"
        android:layout_height="200px"
        android:id="@+id/b1"
        android:background="@mipmap/shop1"
        android:layout_marginBottom="35dp"
        android:layout_above="@+id/b2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="31dp" />

    <Button
        android:layout_width="200px"
        android:layout_height="200px"
        android:id="@+id/b6"

        android:background="@mipmap/hospital1"


        android:layout_alignBottom="@+id/b5"
        android:layout_alignStart="@+id/b4" />

</RelativeLayout>
