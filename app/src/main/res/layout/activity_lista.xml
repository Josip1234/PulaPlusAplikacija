<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lista"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.josip.acer.pulaplusaplikacija.ListaActivity"
    android:animationCache="true">

    <Button

        android:onClick="Booking"
        android:layout_width="200px"
        android:layout_height="200px"
        android:id="@+id/b3"
        android:background="@mipmap/hotel1"
        android:layout_alignTop="@+id/b1"
        android:layout_alignStart="@+id/b4"
        tools:ignore="PxUsage" />

    <Button
        android:layout_width="200px"
        android:layout_height="200px"
        android:id="@+id/b6"

        android:background="@mipmap/hospital1"


        android:layout_alignBottom="@+id/b5"
        android:layout_alignStart="@+id/b4"
        tools:ignore="PxUsage" />

    <TextView
        android:text="  Smještaj   "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_alignTop="@+id/Trgovine"
        tools:ignore="HardcodedText"
        android:layout_alignEnd="@+id/b3"
        android:layout_alignStart="@+id/b3" />

    <TextView
        android:text="   Bolnica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_above="@+id/b6"
        android:layout_marginBottom="19dp"
        tools:ignore="HardcodedText"
        android:layout_alignEnd="@+id/b6"
        android:layout_alignStart="@+id/b6"
        android:textAlignment="textStart" />

    <TextView
        android:text="Znamenitosti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignStart="@+id/b2"
        tools:ignore="HardcodedText" />

    <Button
        android:layout_width="200px"
        android:layout_height="200px"
        android:id="@+id/b4"
        android:background="@mipmap/restoran1"
        android:layout_marginEnd="34dp"

        android:layout_alignTop="@+id/b2"
        android:layout_alignParentEnd="true"
        tools:ignore="PxUsage" />

    <TextView
        android:text=" Restorani"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_above="@+id/b4"
        android:layout_marginBottom="18dp"
        tools:ignore="HardcodedText"
        android:layout_alignEnd="@+id/b4"
        android:layout_alignStart="@+id/b4" />

    <TextView
        android:text="Trgovine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Trgovine"
        tools:ignore="HardcodedText"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/b1" />

    <TextView
        android:text="  Događaji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        tools:ignore="HardcodedText"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignEnd="@+id/Trgovine" />

    <Button
        android:id="@+id/b2"
        android:layout_width="200px"
        android:layout_height="200px"
        android:onClick="Dogadaj"
        android:background="@mipmap/dog1"
        tools:ignore="PxUsage"
        android:layout_marginBottom="68dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/b5" />

    <Button

        android:id="@+id/b5"
        android:layout_width="200px"
        android:layout_height="200px"

        android:background="@mipmap/museum1"
        tools:ignore="PxUsage"
        android:layout_marginStart="45dp"
        android:layout_above="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="21dp" />

    <Button
        android:layout_width="200px"
        android:layout_height="200px"
        android:id="@+id/b1"
        android:background="@mipmap/shop1"
        tools:ignore="PxUsage"
        android:layout_above="@+id/textView6"
        android:layout_alignEnd="@+id/b5"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="41dp" />

    <Button
        android:layout_width="200px"
        android:layout_height="200px"
        android:id="@+id/bus"
        android:background="@drawable/bus"
        tools:ignore="PxUsage"
        android:layout_alignBaseline="@+id/b2"
        android:layout_alignBottom="@+id/b2"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
